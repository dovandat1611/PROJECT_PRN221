        <div class="container-scroller">

                <partial name="/Pages/_HeaderAdminsite.cshtml" model="new PROJECT_PRN221.Pages._HeaderAdminsiteModel()"/>

                <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new PROJECT_PRN221.Pages._LeftPageAdminSiteModel()"/>

                <!-- partial -->
                <div class="main-panel">     
                    <div class="content-wrapper">
                        <c:forEach var="d" items="${data}">
                            <form class="forms-sample" method="post" action="NewsController">
                                <input type="hidden" name="service" value="updateNews">
                                <div class="row">
                                    <div class="col-md-12 grid-margin stretch-card">
                                        <div class="card">
                                            <div class="card-body">
                                                <h4 class="card-title">Create News</h4>
                                                <p class="card-description">
                                                    Fill all the bank
                                                </p>
                                                <input type="hidden" name="service" value="updateNews">
                                                <input type="hidden" name="news_id" value="${d.news_id}">
                                                <div class="form-group">
                                                    <label for="newsgroup_id">News Group</label>
                                                    <select class="form-control" name="newsgroup_id" id="newsgroup_id">
                                                        <c:forEach items="${listG}" var="g">
                                                            @*<option value="${g.newsgroup_id}" ${g.newsgroup_id == d.newsgroup_id ? "selected" : ""}>${g.newsgroup_name}</option>*@
                                                        </c:forEach>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="image">Image</label>
                                                    <img id="preview-img" src="${d.image}" alt="" style="width: 30%">
                                                    <input type="file" class="form-control" onchange="previewImage()" accept="image/*" name="image" id="image"  placeholder="Image">
                                                    <input type="hidden" name="imageoriginal" value="${d.image}">
                                                </div>

                                                <div class="form-group">
                                                    <label for="title">Tile</label>
                                                    <input type="text" class="form-control" value="${d.title}" name="title" id="title" placeholder="Title" required>
                                                </div>

                                                <div class="form-group">
                                                    <label for="content">Content</label> <br>
                                                    <textarea id="inputText"  name="content" >${d.content}</textarea>
                                                </div>
                                                <div style="text-align: center">
                                                    <button type="submit" name="submit" class="btn btn-primary me-2">Submit</button>
                                                    <button class="btn btn-light">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </c:forEach>
                    </div>
