        <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
        <link rel="stylesheet" href="~/admin/vendors/simple-line-icons/css/simple-line-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
        <link rel="shortcut icon" href="~/admin/images/favicon.png" />
    </head>
    <body>

        <div class="container-scroller">
                <partial name="/Pages/_HeaderAdminsite.cshtml" model="new PROJECT_PRN221.Pages._HeaderAdminsiteModel()"/>

                <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new PROJECT_PRN221.Pages._LeftPageAdminSiteModel()"/>
                <!-- partial -->
                <div class="main-panel">        
                    <div class="content-wrapper">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="News.Createdby"/>
                                <input type="hidden" asp-for="News.Status"/>
                                <input type="hidden" asp-for="News.CreatedDate"/>
                                <input type="hidden" asp-for="News.Image"/>
                            <div class="row">
                                <div class="col-md-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body">
                                            <h4 class="card-title">Create News</h4>
                                            <p class="card-description">
                                                Fill all the bank
                                            </p>
                                                <div class="form-group">
                                                    <label asp-for="News.NewsgroupId">News Group</label>
                                                    <select class="form-control" asp-for="News.NewsgroupId" asp-items="ViewBag.NewsgroupId">
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label asp-for="@Model.FileUploads">Image</label>
                                                    <img id="preview-img" src="@Model.News.Image" alt="@Model.News.Image" style="width: 30%">
                                                    <input type="file" asp-for="@Model.FileUploads"  
                                                     class="form-control" onchange="previewImage()" accept="image/*" >
                                                </div>

                                                <div class="form-group">

                                                    <label  asp-for="News.Title">Tile</label>
                                                    <input type="text" class="form-control" asp-for="News.Title" placeholder="Title" required>

                                                </div>

                                                <div class="form-group">

                                                    <label asp-for="News.Content">Content</label> <br>
                                                    <textarea  asp-for="News.Content" ></textarea>

                                                </div>

                                            <div style="text-align: center">
                                                <button type="submit" name="submit" class="btn btn-primary me-2">Submit</button>
                                                <button class="btn btn-light">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
        <script src="~/admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
        <script src="~/admin/js/off-canvas.js"></script>
