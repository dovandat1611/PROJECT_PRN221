<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Star Admin2 </title>
        <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
        <link rel="stylesheet" href="~/admin/vendors/simple-line-icons/css/simple-line-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
        <link rel="shortcut icon" href="~/admin/images/favicon.png" />
        <style>
            a {
                all: unset;
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        <div class="container-scroller">
                <partial name="/Pages/_HeaderAdminsite.cshtml" model="new PROJECT_PRN221.Pages._HeaderAdminsiteModel()"/>

                <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new PROJECT_PRN221.Pages._LeftPageAdminSiteModel()"/>

                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">News</h4>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <form action="NewsController?service=searchNewsGroup" method="post">
                                                        <label for="newsgroup_id">News Group</label>
                                                        <div>
                                                            <select name="newsgroup_id" id="newsgroup_id">
                                                                <c:forEach items="${listG}" var="g">
                                                                    @*<option value="${g.newsgroup_id}" ${g.newsgroup_id eq newsgroup_id ? "selected" : ""}>${g.newsgroup_name}</option>*@
                                                                </c:forEach>
                                                            </select>
                                                            <button class='btn btn-success  btn-sm' type="submit" name="submit">Search</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <form class="search-form" action="NewsController?service=searchNews" method="post">
                                                    <div class="form-group">
                                                        <label for="title">Search Titles</label>
                                                        <input type="hidden"  name="newsgroup_id" value="${newsgroup_id}">
                                                        <input type="text" class="form-control" name="title" id="title" placeholder="Search Here" title="Search here">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div>
                                            <a href="NewsController?service=insertNews" class="btn btn-primary text-white me-0"><i class="mdi mdi-account-plus"></i>Create new</a>
                                            <a onclick="exportToExcel()" class="btn btn-primary text-white me-0"><i class="icon-download"></i> Export</a>
                                        </div>
                                    </div>
                                    <div style="text-align: center">
                                        <p class="badge badge-danger">${ms}</p>
                                    </div>  
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable">
                                                    <thead>
                                                        <tr>
                                                            <th>ID</th>
                                                            <th>Group Name</th>
                                                            <th>Image</th>
                                                            <th>Tile</th>
                                                            <th>Create by</th>
                                                            <th>Created date</th>
                                                            <th>Modify by</th>
                                                            <th>Modify date</th>  
                                                            <th>Update</th>  
                                                            <th>Delete</th>  
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <c:forEach items="${data}" var="d">
                                                            <fmt:formatDate value="${d.modify_date}" pattern="dd-MM-yyyy" var="formattedDate2" />
                                                            <tr>
                                                                <td>${d.news_id}</td>
                                                                <td>${d.newsgroup_name}</td>
                                                                <td><img src="${d.image}" alt=""></td>
                                                                <td>${d.title}</td>
                                                                <td>${d.createby}</td> 
                                                                <td>${d.day}-${d.month}-${d.year}</td> 
                                                                <td>${d.modifyby==null?"NULL":d.modifyby}</td> 
                                                                <td>${formattedDate2==null?"NULL":formattedDate2}</td>
                                                                <td><div class="badge badge-info"><a href="NewsController?service=updateNews&id=${d.news_id}">Update</a></div></td>
                                                                <td ><div class="badge badge-danger"><a href="NewsController?service=deleteNews&id=${d.news_id}">Delete</a></div></td> 
                                                            </tr>
                                                        </c:forEach>
                                                    </tbody>
                                                </table>

                                        <div style="text-align: center">
                                            <c:choose>
                                                <c:when test="${currentPage > 1}">
                                                    <a href="?page=${currentPage - 1}">Previous</a>
                                                </c:when>
                                                <c:otherwise>
                                                    <span>Previous</span>
                                                </c:otherwise>
                                            </c:choose>
                                            <c:forEach begin="1" end="${totalPages}" varStatus="loop">
                                                <c:choose>
                                                    <c:when test="${loop.index == currentPage}">
                                                        <span>${loop.index}</span>
                                                    </c:when>
                                                    <c:otherwise>
                                                        <c:if test="${id == null}">
                                                            <a href="?page=${loop.index}">${loop.index}</a>
                                                        </c:if>  
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:forEach>
                                            <c:choose>
                                                <c:when test="${currentPage < totalPages}">
                                                    <a href="?page=${currentPage + 1}">Next</a>
                                                </c:when>
                                                <c:otherwise>
                                                    <span>Next</span>
                                                </c:otherwise>
                                            </c:choose>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>





        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
        <script src="~/admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
        <script src="~/admin/js/off-canvas.js"></script>
        <script src="~/admin/js/hoverable-collapse.js"></script>
        <script src="~/admin/js/template.js"></script>
        <script src="~/admin/js/settings.js"></script>
        <script src="~/admin/js/todolist.js"></script>
            <script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
    <script>
                                                function exportToExcel() {
                                                    const table = document.getElementById("myTable");
                                                    const wb = XLSX.utils.table_to_book(table, {sheet: "SheetJS"});
                                                    const wbout = XLSX.write(wb, {bookType: "xlsx", type: "array"});
                                                    saveAsExcelFile(wbout, "news.xlsx");
                                                }

                                                function saveAsExcelFile(buffer, fileName) {
                                                    const data = new Blob([buffer], {type: "application/octet-stream"});
                                                    const link = document.createElement("a");
                                                    link.href = window.URL.createObjectURL(data);
                                                    link.download = fileName;
                                                    link.click();
                                                }
    </script>
    </body>
</html>