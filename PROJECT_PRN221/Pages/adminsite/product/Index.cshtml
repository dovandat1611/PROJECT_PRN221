<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Star Admin2 </title>
        <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
        <link rel="stylesheet" href="~/admin/vendors/simple-line-icons/css/simple-line-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
        <link rel="shortcut icon" href="~/admin/images/favicon.png" />
    </head>
    <body>
                <div class="container-scroller">

                 <!-- partial:../../partials/_navbar.html -->
                <partial name="/Pages/_HeaderAdminsite.cshtml" model="new PROJECT_PRN221.Pages._HeaderAdminsiteModel()"/>

                <partial name="/Pages/LeftPageAdminSite.cshtml" model="new PROJECT_PRN221.Pages.LeftPageAdminSiteModel()"/>


                <!-- partial -->
                <div class="main-panel">
                    <div class="content-wrapper">
                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-sm-flex justify-content-between align-items-start">
                                        <div>
                                            <h4 class="card-title card-title-dash">Product</h4>
                                        </div>
                                        <div>
                                            <form class="search-form" action="ProductController?service=searchProduct" method="post">
                                                <input type="text" class="form-control" name="name" placeholder="Search Here" title="Search here">
                                            </form>

                                        </div>
                                        <div class="badge badge-opacity-warning me-3"><a href="ProductController?service=displayProductWarranty">Search for product Warranty</a></div>
                                        <div>
                                            <a href="ProductController?service=insertProduct" class="btn btn-primary text-white me-0"><i class="mdi mdi-account-plus"></i> Add new product</a>
                                            <a onclick="exportToExcel()" class="btn btn-primary text-white me-0"><i class="icon-download"></i> Export</a>
                                        </div>
                                    </div>
                                    <div style="text-align: center">
                                        <p class="badge badge-danger">${ms}</p>
                                    </div> 
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="myTable" >
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Product Name</th>   
                                                    <th>Image</th>
                                                    <th>List Price</th>
                                                    <th>Discount</th>
                                                    <th>Category Name</th>
                                                    <th>Brand Name</th>
                                                    <th>Status</th>
                                                    <th>Update</th>
                                                    <th>Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <c:forEach items="${data}" var="d">
                                                    <tr>
                                                        <td>${d.product_id}</td>
                                                        <c:set var="productPrinted" value="false" /> 
                                                        <c:forEach var="totalwarranty" items="${totalwarrantyofproduct}">
                                                            <c:if test="${totalwarranty.product_id eq d.product_id}">
                                                                <c:if test="${!productPrinted}"> 
                                                                    <td>${d.product_name} | 
                                                                        <div class="badge badge-opacity-danger">
                                                                            <a href="WarrantyController?service=displayWarrantyforProduct&id=${d.product_id}">
                                                                                Total Warranty: ${totalwarranty.total_warranty}
                                                                            </a>
                                                                        </div>
                                                                    </td>
                                                                    <c:set var="productPrinted" value="true" /> 
                                                                </c:if>
                                                            </c:if>
                                                        </c:forEach>

                                                        <c:if test="${!productPrinted}">
                                                            <td>${d.product_name}</td>
                                                        </c:if>

                                                        <td><img src="${d.image}" alt="alt"/></td>
                                                        <td class="number">${d.list_price}</td>
                                                        <td>${d.discount}</td> 
                                                        <td>${d.category_name}</td> 
                                                        <td>${d.brand_name}</td> 
                                                        <td>
                                                            <div class="${d.status eq 'Stocking' ? 'badge badge-opacity-success' : 'badge badge-opacity-danger'}">
                                                                ${d.status}
                                                            </div>
                                                        </td> 
                                                        <td><div class="badge badge-info"><a href="ProductController?service=updateProduct&id=${d.product_id}">Update</a></div></td>
                                                        <td><div class="badge badge-danger"><a href="ProductController?service=deleteProduct&id=${d.product_id}">Delete</a></div></td> 
                                                    </tr>
                                                </c:forEach>
                                            </tbody>
                                        </table>
                                        <div style="text-align: center">
                                            <c:choose>
                                                <c:when test="${currentPage > 1}">
                                                    <a href="?page=${currentPage - 1}">Previous</a>
                                                </c:when>
                                                <c:otherwise>
                                                    <span>Previous</span>
                                                </c:otherwise>
                                            </c:choose>
                                            <c:forEach begin="1" end="${totalPages}" varStatus="loop">
                                                <c:choose>
                                                    <c:when test="${loop.index == currentPage}">
                                                        <span>${loop.index}</span>
                                                    </c:when>
                                                    <c:otherwise>
                                                        <c:if test="${id == null}">
                                                            <a href="?page=${loop.index}">${loop.index}</a>
                                                        </c:if>  
                                                    </c:otherwise>
                                                </c:choose>
                                            </c:forEach>
                                            <c:choose>
                                                <c:when test="${currentPage < totalPages}">
                                                    <a href="?page=${currentPage + 1}">Next</a>
                                                </c:when>
                                                <c:otherwise>
                                                    <span>Next</span>
                                                </c:otherwise>
                                            </c:choose>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
        <script src="~/admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
        <script src="~/admin/js/off-canvas.js"></script>
        <script src="~/admin/js/hoverable-collapse.js"></script>
