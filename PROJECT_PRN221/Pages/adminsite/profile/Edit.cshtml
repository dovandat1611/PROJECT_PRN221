@page
@model PROJECT_PRN221.Pages.adminsite.profile.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Star Admin2 </title>
        <link rel="stylesheet" href="~/admin/vendors/feather/feather.css">
        <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
        <link rel="stylesheet" href="~/admin/vendors/ti-icons/css/themify-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/typicons/typicons.css">
        <link rel="stylesheet" href="~/admin/vendors/simple-line-icons/css/simple-line-icons.css">
        <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
        <link rel="stylesheet" href="~/admin/css/vertical-layout-light/style.css">
        <link rel="shortcut icon" href="~/admin/images/favicon.png" />
    </head>
    <body>

       <div class="container-scroller">

                <partial name="/Pages/_HeaderAdminsite.cshtml" model="new PROJECT_PRN221.Pages._HeaderAdminsiteModel()"/>

                <partial name="/Pages/_LeftPageAdminSite.cshtml" model="new PROJECT_PRN221.Pages._LeftPageAdminSiteModel()"/>


                <div class="container" style="margin-top: 50px">
                        <div class="row gutters">
                            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="account-settings">
                                            <div class="user-profile">
                                                <div class="user-avatar">
                                                    <img src="@Model.Admin.Image" alt="Admin" style="width: 100px; height: 100px">
                                                </div>
                                                <h5 class="user-name">@Model.Admin.Username</h5>
                                                <h6 class="user-email">@Model.Admin.Gmail</h6>
                                            </div>
                                            <div class="about">
                                                <h5>About</h5>
                                                <p>Full Name: @Model.Admin.Name</p>
                                                <p>Phone: @Model.Admin.Phone</p>
                                                <p>Email: @Model.Admin.Gmail</p> 
                                                <p>Dob: @Model.Admin.Dob</p>      
                                            </div>
                                            <div class="about">
                                                <a href="ProfileAdminController" class="btn btn-secondary">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">
                                    <div class="card-body">
                                        <form method="post" enctype="multipart/form-data">      
                                             <input type="hidden" asp-for="Admin.AdminId">
                                             <input type="hidden" asp-for="Admin.Username">
                                             <input type="hidden" asp-for="Admin.Password">
                                             <input type="hidden" asp-for="Admin.Status">
                                            <div class="row gutters">
                                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                    <h6 class="mb-2 text-primary">Personal Details</h6>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        <label asp-for="Admin.Name">Full Name</label>
                                                        <input type="text" asp-for="Admin.Name" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        <label asp-for="Admin.Gmail">Email</label>
                                                        <input type="text" asp-for="Admin.Gmail" class="form-control">
                                                        <span asp-validation-for="Admin.Gmail" class="badge badge-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        <label asp-for="@Model.FileUploads">Image</label>
                                                        <img id="preview-img" src="@Model.Admin.Image" alt="@Model.Admin.Image" style="width: 30%">
                                                        <input type="file"  asp-for="@Model.FileUploads" 
                                                         class="form-control" onchange="previewImage()" accept="image/*" >
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                    <div class="form-group">
                                                        <label asp-for="Admin.Phone">Phone</label>
                                                        <input type="text" asp-for="Admin.Phone" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label asp-for="Admin.Dob">Dob</label>
                                                    <input type="date" asp-for="Admin.Dob" class="form-control">
                                                </div>
                                                </div>
                                                <div class="row gutters">
                                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                                        <div class="text-right" style="margin-top: 30px;">
                                                            <button type="submit" id="submit" name="submit"  class="btn btn-primary">Update</button>                                  
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>





        <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
        <script src="~/admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
        <script src="~/admin/js/off-canvas.js"></script>
        <script src="~/admin/js/hoverable-collapse.js"></script>
        <script src="~/admin/js/template.js"></script>
        <script src="~/admin/js/settings.js"></script>
        <script src="~/admin/js/todolist.js"></script>
           <script>
            function previewImage() {
                var preview = document.querySelector('#preview-img');
                var file = document.querySelector('input[type=file]').files[0];
                var reader = new FileReader();
                reader.onloadend = function () {
                    preview.src = reader.result;
                };
                if (file) {
                    reader.readAsDataURL(file);
                } else {
                    preview.src = "";
                }
            }
        </script>
    </body>
</html>